<IfModule mod_rewrite.c> 
    RewriteEngine On 
    RewriteBase / 
    
    # ---- Configuraci칩n de seguridad b치sica ---- 
    # Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" 
    # Header always set X-Content-Type-Options "nosniff" 
    # Header always set X-Frame-Options "SAMEORIGIN" 
    
    # ---- Redirecci칩n HTTPS (opcional, descomenta si lo necesitas) ---- 
    # RewriteCond %{HTTPS} off 
    # RewriteCond %{SERVER_PORT} !^8055$ 
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301] 
    
    # ---- Regla principal para manejo de rutas ---- 
    # Excluye archivos y directorios reales 
    RewriteCond %{REQUEST_FILENAME} !-f 
    RewriteCond %{REQUEST_FILENAME} !-d 
    
    # Redirige todo a index.php capturando la ruta 
    RewriteRule ^(.*)$ index.php?views=$1 [L,QSA] 
    
